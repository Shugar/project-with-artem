@import 'nib'

global-reset()

fiolet = #313151 //фон шапки, плашки новостей, футера, текст в блоках
seriy = #E7E7E6 //Светло-серый фон блоков (не тень)
shadow = #ADADAC //Тень от блоков в "спецпредложениях"
temniy = #C4C4C4 //фон инпута поиска
svetliy = #F6F6F4 //фон кнопки поиска


.head
	min-width 582px
	width 100%
	height 92px
	background-color: fiolet
	font-family 'Open Sans', arial, sans-serif
	button
		border none
		background-color transparent
		cursor pointer
	button:focus
		outline none
	.container
		max-width 990px
		margin 0 auto
		padding-left 20px
		padding-right 20px
		.info
			display block
			height 30px
			padding-top 15px
			#date
				color white
				font-size 14px
				position relative
				top 28px
				left 7px
				width 16px
				height 14px
		.leftside
			display inline-block
			float left
			margin-right 30px
		.midinfo
			min-width 279px
			margin 0 auto
			width 279px
			height 30px
			display block
			.course
				width 83px
				height 30px
				display inline-block
				img, h4
					display inline-block
				h4
					color #E6E6E7
					font-size 14px
					vertical-align top
					margin -1px 0 9px 9px
				h6
					color #FC89AE
					font-size 10px
					margin-left 36px
				.dollar
					margin-right 3px
			.wheather
				display inline-block
				margin-left 16px
				width 70px
				.oner
					margin-bottom 3px
					float left
				h3
					float right
					font-size 16px
					color white
					display inline-block
					margin-top 7px
				.twoer
					position relative
					bottom 13px
					right 13px
		.menu
			width 15px
			height 17px
			margin 7px 0
			display inline-block
			float right
			margin-left 30px
		.settings
			width 28px
			height 28px
			display inline-block
			float right
			margin 2px 0 2px 20px
.inside
	margin-top 20px
	.container2
		max-width 990px
		margin 0 auto
		#profile
			position relative
			float right
			margin-top: -25px;
			font-size 12px
		.mainer
			margin-top 40px
			.logoput
				margin 0 auto
				width 582px
				img
					margin 20px auto 40px auto
					display block
				input
					margin-top 13px
					padding 55px 191px 18px 178px
					font-size 16px
					font-family sans-serif
					font-weight bolder
					border none
					color #E10155
					text-transform uppercase
				input:focus
					outline none
				input
					display none
			.search
				margin-top 40px
				a
					img
						width 115px
						background-color #e7e7e6
						float left
				input, button
					float right
					height 77px
					border 2px solid #D0CECE
					font-size 17px
				button
					width 205px
					padding 3px 50px 0 0px
					background-color #F6F6F4
					background-repeat no-repeat
					background-position 80% 50%
					font-family sans-serif
					font-weight 600
					-webkit-box-shadow inset 0px 0px 0px 4px rgba(231,231,230,1)
					-moz-box-shadow inset 0px 0px 0px 4px rgba(231,231,230,1)
					box-shadow inset 0px 0px 0px 4px rgba(231,231,230,1)
				input
					width 630px
					padding 0 20px
					-webkit-box-shadow: inset 0px 0px 0px 1px rgba(177,177,177,1)
					-moz-box-shadow: inset 0px 0px 0px 1px rgba(177,177,177,1)
					box-shadow: inset 0px 0px 0px 1px rgba(177,177,177,1)
					background-color #C4C4C4
				input:focus, button:focus
					outline none
				button:hover
					cursor pointer